<form action="/user/register" method="POST">
  <!-- <label>Login</label>
  <input type="text" name="login" value="<%= user.login%>" /> -->
  <br />
  <label>Password</label>
  <input type="password" name="password" value="<%= user.password%>" />
  <br />
  <label>First Name</label>
  <input type="text" name="firstname" value="<%= user.firstname%>" />
  <br />
  <label>Last Name</label>
  <input type="text" name="lastname" value="<%= user.lastname%>" />
  <br />
  <label>Gender</label>
  <select name="gender">
    <% if(user.gender === "M"){ %>
    <option value="M" selected>Male</option>
    <%}else{%>
    <option value="M">Male</option>

    <%}%> <% if(user.gender === "F"){ %>
    <option value="F" selected>Female</option>
    <%}else{%>
    <option value="F">Female</option>
    <%}%>
  </select>
  <br />
  <label>Email</label>
  <input type="text" name="email" value="<%= user.email%>" />
  <br />
  <label>Phone</label>
  <input type="text" name="phone" value="<%= user.phone%>" />
  <br />
  <label>Choose Your Skill</label>
  <br />

  <% if(skills != null && skills.includes('skill_1')){%>
  <input type="checkbox" name="skills" value="skill_1" checked />Skill 1 <%}
  else{ %> <input type="checkbox" name="skills" value="skill_1" />Skill 1 <%}%>
  <% if(skills != null && skills.includes('skill_2')){%>
  <input type="checkbox" name="skills" value="skill_2" checked />Skill 2 <%}
  else{ %> <input type="checkbox" name="skills" value="skill_2" />Skill 2 <%}%>
  <% if(skills != null && skills.includes('skill_3')){%>
  <input type="checkbox" name="skills" value="skill_3" checked />Skill 3 <%}
  else{ %> <input type="checkbox" name="skills" value="skill_3" />Skill 3 <%}%>
  <% if(skills != null && skills.includes('skill_4')){%>
  <input type="checkbox" name="skills" value="skill_4" checked />Skill 4 <%}
  else{ %> <input type="checkbox" name="skills" value="skill_4" />Skill 4 <%}%>
  <% if(skills != null && skills.includes('skill_5')){%>
  <input type="checkbox" name="skills" value="skill_5" checked />Skill 5 <%}
  else{ %> <input type="checkbox" name="skills" value="skill_5" />Skill 5 <%}%>

  <br />
  <button type="submit">Register</button>
  <a href="user/login"><button>Cancel</button></a>
</form>
